<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robotiq_gripper">
  <!-- 改進版的雙指夾爪，加入 offset 參數可調位置 -->
  <xacro:macro name="simple_gripper" params="connected_to offset_xyz offset_rpy">
    <!-- 基座鏈節：作為夾爪與機械臂的連接點 -->
    <link name="gripper_base_link">
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <!-- 使用圓柱體讓外型看起來較精緻 -->
        <geometry>
          <cylinder length="0.02" radius="0.01"/>
        </geometry>
        <material name="Grey">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.02" radius="0.01"/>
        </geometry>
      </collision>
    </link>

    <!-- 固定關節：將夾爪基座連接到機械臂的末端連結，並加入可調 offset -->
    <joint name="gripper_mount_joint" type="fixed">
      <parent link="${connected_to}"/>
      <child link="gripper_base_link"/>
      <!-- 透過 offset_xyz 與 offset_rpy 調整夾爪位置 -->
      <origin xyz="${offset_xyz}" rpy="${offset_rpy}"/>
    </joint>

    <!-- 左夾指 -->
    <link name="left_finger_link">
      <inertial>
        <mass value="0.05"/>
        <origin xyz="0.04 0 0" rpy="0 0 0"/>
        <inertia ixx="2e-5" ixy="0" ixz="0" iyy="2e-5" iyz="0" izz="2e-5"/>
      </inertial>
      <visual>
        <origin xyz="0.04 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.08 0.015 0.04"/>
        </geometry>
        <material name="Blue">
          <color rgba="0 0 1 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.04 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.08 0.015 0.04"/>
        </geometry>
        <surface>
          <friction>
            <ode mu="10" mu2="10"/>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- 右夾指 -->
    <link name="right_finger_link">
      <inertial>
        <mass value="0.05"/>
        <origin xyz="0.04 0 0" rpy="0 0 0"/>
        <inertia ixx="2e-5" ixy="0" ixz="0" iyy="2e-5" iyz="0" izz="2e-5"/>
      </inertial>
      <visual>
        <origin xyz="0.04 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.08 0.015 0.04"/>
        </geometry>
        <material name="Blue">
          <color rgba="0 0 1 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.04 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.08 0.015 0.04"/>
        </geometry>
        <surface>
          <friction>
            <ode mu="10" mu2="10"/>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- 左夾指關節：用於控制左指的夾合 -->
    <joint name="left_finger_joint" type="revolute">
      <parent link="gripper_base_link"/>
      <child link="left_finger_link"/>
      <origin xyz="0 0.025 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.25" upper="0" effort="5.0" velocity="2.0"/>
      <dynamics damping="0.1"/>
    </joint>

    <!-- 右夾指關節：用於控制右指的夾合 -->
    <joint name="right_finger_joint" type="revolute">
      <parent link="gripper_base_link"/>
      <child link="right_finger_link"/>
      <origin xyz="0 -0.025 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="0" upper="0.25" effort="5.0" velocity="2.0"/>
      <dynamics damping="0.1"/>
    </joint>

    <!-- ROS2 控制介面設定（如使用 ros2_control 在 Gazebo 中控制時） -->
    <ros2_control name="gripper_robot" type="system">
      <hardware>
        <plugin>gazebo_ros2_control/GazeboSystem</plugin>
      </hardware>
      <joint name="left_finger_joint">
        <command_interface name="effort"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      <joint name="right_finger_joint">
        <command_interface name="effort"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
    </ros2_control>
  </xacro:macro>
</robot>
